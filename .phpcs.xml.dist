<?xml version="1.0"?>
<ruleset name="genesis-explained">
	<description>The code standard for genesis-explained.</description>

	<!-- What to scan -->
	<file>.</file>
	<exclude-pattern>vendor/</exclude-pattern>
	<!-- Add additional exclude directories here-->

	<!-- How to scan -->
	<arg value="sp"/> <!-- Show sniff and progress -->
	<arg name="basepath" value="."/><!-- Strip the file paths down to the relevant bit -->
	<arg name="colors" />
	<arg name="extensions" value="php"/>
	<arg name="report" value="full"/>
	<arg name="report" value="summary"/>
	<arg name="report" value="source"/>

	<!-- Rules: Check PHP version compatibility -->
	<config name="testVersion" value="7.0"/>
	<rule ref="PHPCompatibility"/>

	<!-- Rules: WordPress Coding Standards -->
	<config name="minimum_supported_wp_version" value="4.5"/>
	<rule ref="WordPress">
		<exclude name="WordPress.VIP"/>
		<exclude name="Generic.Files.OneClassPerFile.MultipleFound"/>
		<exclude name="WordPress.Files.FileName.InvalidClassFileName"/>
	</rule>
	<rule ref="WordPress.NamingConventions.PrefixAllGlobals">
		<properties>
			<property name="prefixes" type="array" value=""/>
		</properties>
	</rule>
	<rule ref="WordPress.WP.I18n">
		<properties>
			<property name="text_domain" type="array" value="genesis-explained,genesis-boilerplate"/>
		</properties>
	</rule>
	<rule ref="WordPress.WhiteSpace.ControlStructureSpacing">
		<properties>
			<property name="blank_line_check" value="true"/>
		</properties>
	</rule>
</ruleset>